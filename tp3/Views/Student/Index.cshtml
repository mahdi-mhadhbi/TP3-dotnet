@model IEnumerable<tp3.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form asp-action="Search" method="get">
    <input type="text" name="term" placeholder="Search by name" />
    <button type="submit">Search</button>
</form>
<form asp-action="SearchBySchool" method="get">
    <select name="selectedSchoolId">
        @foreach (var school in ViewBag.Schools)
        {
            <option value="@school.Value">@school.Text</option>
        }
    </select>

    <button type="submit">Search</button>
</form>
<a asp-action="Index" asp-controller="Student"> All Students</a>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.School)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                <td>@Html.DisplayFor(modelItem => item.School.SchoolName)</td>
             </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
